@using Microsoft.AspNetCore.Components;
@model IEnumerable<CoastalVilla_Web.Models.Dto.VillaDTO>

<img class="d-block w-100" src="images/home/slide1.jpg" alt="" />

<div class="welcoming-text pb-1 pt-3">
    <div class="text-body-secondary pb-0 pt-5" style="display: flex; justify-content: center;">
        <p>WELCOME TO THE COASTAL VILLA LUXURY RESORT</p>
    </div>

    <div class="phrase-resort pt-2" style="display:flex; justify-content:center; margin: 0% 10% 1% 10%">
        <p style="font-size: 45px; text-align:center;"><strong>Retreat to our lavish sanctuary in Bali</strong></p>
    </div>

    <div style="width: 15%; margin: 0 auto;">
        <hr style="height: 4px; background-color: black;">
    </div>

    <div class="resort-welcoming-text pb-3 pt-1" style="display:flex; justify-content:center; margin: 2% 10% 4% 10%">
        <p style="font-size: 20px; text-align:center;">Luxuriate in a world of exquisite living at the villas with private pool and gazebo. Some villas boast direct access to the pristine beach or to the expansive saltwater lagoon. Enjoy the tranquil sound of the ocean waves and the breathtaking views of the lush tropical landscape.</p>
    </div>
</div>

<div class="row" style="--bs-gutter-x:0">
    @foreach(var villa in Model)
    {
        <div class="p-4 col-md-12 col-lg-6">
            <div class="row">
                <div class="col-4">
                    <img class="d-block w-100" src="@villa.ImageUrl" alt="First slide">
                </div>
                <div class="col-8">
                    <p class="card-title text-secondary" style="font-size:xx-large">@villa.Name</p>
                    <p class="card-text">
                        @((MarkupString)villa.Details)
                    </p>
                </div>
                <div class="col-12">
                    <div class="row pb-3 pt-2">
                        <div class="col-4">
                            <a asp-controller="Villa" asp-action="DetailsVilla" asp-route-VillaNo="" class="btn btn-info form-control btn-block" style="border-radius: 5px">Explore</a>
                        </div>
                        <div class="col-4">
                            <span class="">Max Occupancy : @villa.Occupancy adults</span><br />
                            <span class=" pt-1">Villa Size: @villa.Sqft sqft</span><br />
                        </div>
                        <div class="col-4">
                            <span class="text-warning float-end font-weight-bold pt-1" style="font-size:25px;">
                                <strong>USD</strong>
                                <span>
                                    <strong>@villa.Rate.ToString("c")</strong>
                                </span>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
